<rules>	#	#Setup for the modification of the panels of selected skin,	#----------------------------------------------------------		#Create a RuleSet section for each Skins to be managed	#----------------------------------------------------------		#Rule type "Skyn" = Name and Path of the skin to be managed	#Rule Type "Panel" = Name and Path of the panel to replace	#Add Pic	#----------------------------------------------------------		<ruleset name="Skin Xta HD v1.1 by mmark " Icon="/usr/share/enigma2/xta/prev.png" >			<set name="ChannelSelection">						<rule type="skin"  Nome="ListChannel"           Path="/usr/share/enigma2/xta/modules/skin_listchannel.xml" ></rule>  				<rule type="panel" Nome="ListChannel Original"  Path="/usr/lib/enigma2/python/Plugins/Extensions/iSkin/setupskin/xta/channelselection/listchannel_original.xml" ></rule>			<rule type="panel" Nome="ListChannel NoPig"     Path="/usr/lib/enigma2/python/Plugins/Extensions/iSkin/setupskin/xta/channelselection/listchannel_nopig.xml" ></rule>			<rule type="panel" Nome="ListChannel BigPig"    Path="/usr/lib/enigma2/python/Plugins/Extensions/iSkin/setupskin/xta/channelselection/listchannel_bigpig.xml" ></rule>		</set>		<set name="Infobar">						<rule type="skin"  Nome="InfoBar"               Path="/usr/share/enigma2/xta/modules/skin_infobar.xml" ></rule>  				<rule type="panel" Nome="InfoBar Original"      Path="/usr/lib/enigma2/python/Plugins/Extensions/iSkin/setupskin/xta/infobar/infobar_original.xml" ></rule>			<rule type="panel" Nome="InfoBar Dx Picon"      Path="/usr/lib/enigma2/python/Plugins/Extensions/iSkin/setupskin/xta/infobar/infobar_picdx.xml" ></rule>		</set>		<set name="ExtraInfobar">						<rule type="skin"  Nome="ExtInfoBar"            Path="/usr/share/enigma2/xta/modules/skin_extinfobar.xml" ></rule>  				<rule type="panel" Nome="ExtInfoBar Original"   Path="/usr/lib/enigma2/python/Plugins/Extensions/iSkin/setupskin/xta/einfobar/einfobar_original.xml" ></rule>			<rule type="panel" Nome="ExtInfoBar Weather "   Path="/usr/lib/enigma2/python/Plugins/Extensions/iSkin/setupskin/xta/einfobar/einfobar_weather.xml" ></rule>			<rule type="panel" Nome="ExtInfoBar Events  "   Path="/usr/lib/enigma2/python/Plugins/Extensions/iSkin/setupskin/xta/einfobar/einfobar_events.xml" ></rule>		</set>	</ruleset>	</rules>